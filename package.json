{
  "name": "merlin-bess-quote-builder",
  "private": false,
  "version": "1.0.0",
  "description": "Professional BESS (Battery Energy Storage System) quote builder with vendor management and database integration",
  "type": "module",
  "main": "server/index.cjs",
  "scripts": {
    "dev": "vite",
    "build": "if command -v vite >/dev/null 2>&1; then vite build; else echo 'Vite not available - build already completed in Docker'; fi",
    "start": "node server/index.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:all": "concurrently \"npm:dev:api\" \"npm:dev\"",
    "dev:api": "node server/index.cjs",
    "build:prod": "npm run build && npm run start",
    "railway:build": "npm install && npm run build",
    "railway:start": "cd server && node index.cjs"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "docxtemplater": "^3.66.5",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "pizzip": "^3.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "xlsx-populate": "^1.21.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  }
}
